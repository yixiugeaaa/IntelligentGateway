<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/base_color_deep" android:startColor="@color/base_color_deep" />
            <corners android:radius="5dp" /> 
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/base_color_deep" android:startColor="@color/base_color_deep" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/base_color" android:startColor="@color/base_color" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>