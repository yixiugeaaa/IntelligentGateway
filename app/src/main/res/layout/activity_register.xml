<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <View
        style="@style/style_divider_h"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_key_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <View
                    style="@style/style_divider_v"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_common_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="获取验证码"
                    android:textColor="@color/base_color"
                    android:textSize="16sp" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="手机号"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:textColor="@color/tv_text"
                android:textSize="16sp" />

        </RelativeLayout>

        <View style="@style/style_divider_h" />

        <EditText
            android:id="@+id/et_key_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/layout_key_code"
            android:background="@null"
            android:hint="验证码"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColor="@color/tv_text"
            android:textSize="16sp" />

        <View style="@style/style_divider_h" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="密码"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:password="true"
            android:textColor="@color/tv_text"
            android:textSize="16sp" />

        <View style="@style/style_divider_h" />
    </LinearLayout>

    <View style="@style/style_divider_h" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_base_shape_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="注册"
        android:textColor="@color/base_color"
        android:textSize="16sp" />

</LinearLayout>