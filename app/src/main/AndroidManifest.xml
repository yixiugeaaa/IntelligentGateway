<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.qaii.intelligentgateway" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".base.BaseApplication"
        android:icon="@drawable/ic_launcher"
        android:label="QAIIHOME"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="QAIIHOME"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="QAII智能家居"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".user.RegisterActivity"
            android:label="注册"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".user.LoginActivity"
            android:label="登录"
            android:screenOrientation="portrait" />

        <activity
            android:name=".gateway.SwitchGatewayActivity"
            android:label="绑定设备"
            android:theme="@style/SwipeBackTheme" >
        </activity>
        <activity
            android:name=".gateway.SearchGatewayActivity"
            android:label="绑定设备"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".gateway.model.NetworkConfigActivity"
            android:label="绑定设备"
            android:screenOrientation="portrait"  >
        </activity>

        <activity
            android:name=".base.ImagePagerActivity"
            android:label="操作步骤"
            android:screenOrientation="portrait"
            ></activity>

    </application>

</manifest>
